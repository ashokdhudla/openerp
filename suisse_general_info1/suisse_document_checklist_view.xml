<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data> 
              <!--Document Checklist form view-->
		 <record id="document_checklist_form" model="ir.ui.view">
			<field name="name">suisse.document.checklist</field>
			<field name="model">suisse.documents</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Checklist" version="7.0">
				<sheet>
				<group>
				  <field name="client_name" style="width:60%%;"/>
				  <field name="Date"/>
				  <field name="rm_name" style="width:50%%;"/>
				  <field name="verification_officer" style="width:50%%;"/>
				 </group>
				 <notebook>
				 <page string="LGT-individual">
				 <div style="width:100%%;border-top:3px solid black;border-bottom:3px solid black;margin-left: -1%%;">
					<div style="width:33%%;float:left;">
						<p>Account Opening Documents</p>
					</div>
					<div style="width:33%%;display:inline;">
						<p style="margin-left:46%%;">Ref Number</p>
					</div>
					<div style="width:33%%;margin-left: 49%%;margin-top: -3%%;">
						<p style="margin-left:43%%;"> Submitted by RM</p>
					</div>
					<div style="width:33%%;float:right;margin-top:-6%%;">
						<p style="margin-top:8%%;margin-left:35%%;">Checked by supervisor</p>
					</div>

				</div>
				<div>
				<p><b>Opening of a banking relationship(private individuals)</b></p>
				</div>
				<div style="margin-left: 44%%;margin-top: -4%%;">
				 <field name="opening_banking_relationship_ref" style="width:20%%;"/>
				  <field name="opening_banking_relationship_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="opening_banking_relationship_checked" style="width:20%%;margin-left:60px;"/>
				</div>
				<div>
				<p><b>Signature card and power of attorney</b></p>
				</div>
				<div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="sign_power_of_attorney_ref" style="width:20%%;"/>
				  <field name="sign_power_of_attorney_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="sign_power_of_attorney_checked" style="width:20%%; margin-left:60px;"/>
				</div>
				<div>
				<p><b>General deed of pledge and declaration of assignment</b></p>
				</div>
				<div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="assignment_declaration_ref" style="width:20%%;"/>
				  <field name="assignment_declaration_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="assignment_declaration_checked" style="width:20%%; margin-left:60px;"/>
				</div>
				<div>
				<p><b>Power of administration</b></p>
				</div>
				<div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="administration_power_ref" style="width:20%%;"/>
				  <field name="administration_power_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="administration_power_checked" style="width:20%%; margin-left:60px;"/>
				 </div>
				 <div>
				 <p><b>Standing instruction for the exercise of<br/> subscription rights and reinvestments</b></p>
				 </div>
				 <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="subscription_rights_ref" style="width:20%%;"/>
				  <field name="subscription_rights_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="subscription_rights_checked" style="width:20%%; margin-left:60px;"/>
				 </div>
				 <div>
				 <p><b>Framework agreement concerning units in funds <br/>with special features and risks</b></p>
				 </div>
				 <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="framework_agreement_funds_ref" style="width:20%%;"/>
				  <field name="framework_agreement_funds_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="framework_agreement_funds_checked" style="width:20%%; margin-left:60px;"/>
				 </div>
				 <div>
				 <p><b>Framework agreement for the purchase <br/>and design of structured products</b></p>
				 </div>
				 <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="framework_agreement_purchase_ref" style="width:20%%;"/>
				  <field name="framework_agreement_purchase_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="framework_agreement_purchase_checked" style="width:20%%; margin-left:60px;"/>
				 </div>
				 <div>
				 <p><b>Agreement regarding options,features<br/> and forward transactions</b></p>
				 </div>
				 <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="agreement_options_ref" style="width:20%%;"/>
				  <field name="agreement_options_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="agreement_options_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Authorization to disclose certain info<br/> to the supervisory authorities in Hong Kong</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="authorization_disclose_ref" style="width:20%%;"/>
				  <field name="authorization_disclose_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="authorization_disclose_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Release declaration in conjunction with Norwegian securities</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="release_declaration_norwegian_ref" style="width:20%%;"/>
				  <field name="release_declaration_norwegian_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="release_declaration_norwegian_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Release declaration in conjunction with Taiwanese securities</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="release_declaration_taiwanese_ref" style="width:20%%;"/>
				  <field name="release_declaration_taiwanese_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="release_declaration_taiwanese_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Authorization to use the e-services of LGT<br/> Bank in Liechtenstein Ltd. for private clients</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="eservices_auth_ref" style="width:20%%;"/>
				  <field name="eservices_auth_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="eservices_auth_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Application to use the e-services of LGT<br/> Bank in Liechtenstein Ltd. for private clients</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="eservices_application_ref" style="width:20%%;"/>
				  <field name="eservices_application_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="eservices_application_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Standing Order</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="stadingorder_ref" style="width:20%%;"/>
				  <field name="stadingorder_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="stadingorder_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Investor Profile</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="investor_profile_ref" style="width:20%%;"/>
				  <field name="investor_profile_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="investor_profile_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Valid passport and visa copy.(certified copy)</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="passport_visa_ref" style="width:20%%;"/>
				  <field name="passport_visa_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="passport_visa_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Valid address proof-if utility bills provide<br/> should not be more than 3 months old.(certified copy)</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="address_proof_ref" style="width:20%%;"/>
				  <field name="address_proof_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="address_proof_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>AML-client Opening form</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="AML_form_ref" style="width:20%%;"/>
				  <field name="AML_form_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="AML_form_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>K.Y.C.(Know Your Client)</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="KYC_ref" style="width:20%%;"/>
				  <field name="KYC_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="KYC_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Risk Profiling Form</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="risk_profile_ref" style="width:20%%;"/>
				  <field name="risk_profile_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="risk_profile_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Asset Management Agreement Form</b></p>
				  </div>
				  <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="asset_mgmt_form_ref" style="width:20%%;"/>
				  <field name="asset_mgmt_form_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="asset_mgmt_form_checked" style="width:20%%; margin-left:60px;"/>
				  </div>
				  <div>
				  <p><b>Original Form A</b></p>
				  </div>
				 <div style="margin-left: 44%%;margin-top: -4%%;">
				  <field name="original_formA_ref" style="width:20%%;"/>
				  <field name="original_formA_sub" style="width:20%%; margin-left:60px;"/>
				  <field name="original_formA_checked" style="width:20%%; margin-left:60px;"/>
				</div>
				</page>
				</notebook>
				</sheet>
				</form>
				</field>
			</record>
			<record id="suisse_checklist_action" model="ir.actions.act_window">
            <field name="name">Checklist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">suisse.documents</field>
            <field name="view_type">form</field>
			<field name="view_mode">form</field>
			 <field name="view_id" ref="document_checklist_form"/>
        </record>
		<menuitem action="suisse_checklist_action" id="menu_checklist_form"  sequence="1" parent="suisse_asset_management_general_info" />
	</data>
</openerp>